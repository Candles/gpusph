/// Add FEA displacement 
template<typename EP, typename P>
__device__ __forceinline__
enable_if_t<EP::simflags & ENABLE_FEA>
move_fea_nodes(EP const& params, P &pdata, int index, float dt)
{
	pdata.pos.x += pdata.fea_vel.x*dt;
	pdata.pos.y += pdata.fea_vel.y*dt;
	pdata.pos.z += pdata.fea_vel.z*dt;

}

template<typename EP, typename P>
__device__ __forceinline__
enable_if_t<not (EP::simflags & ENABLE_FEA)>
move_fea_nodes(EP const& params, P &pdata, int index, float dt)
{ /* do nothing */ }

template<typename EP>
__device__ __forceinline__
void distribute_fea_movement(EP const& params, uint node, float shape_weight, const float dt, float4& disp, float4& vel)
{
	float4 node_disp = params.fea_velocities[node];
	disp += shape_weight*node_disp*dt;
	vel += shape_weight*node_disp;
}

/// Add FEA displacement 
template<typename EP, typename P>
__device__ __forceinline__
enable_if_t<EP::simflags & ENABLE_FEA>
move_fea_parts(EP const& params, P &pdata, int index, float dt)
{

	// TODO these are computed for both shells and cables,
	// even though each type needs its own subset
	// quantities to build shape functions
	// shell
	const float cm = 1.0 - pdata.fea_nat_coords.x;
	const float cp = 1.0 + pdata.fea_nat_coords.x;
	const float em = 1.0 - pdata.fea_nat_coords.y;
	const float ep = 1.0 + pdata.fea_nat_coords.y;
	// cable
	const float zm = 1.0 - pdata.fea_nat_coords.z;
	const float zp = 1.0 + pdata.fea_nat_coords.z;

	float4 disp = make_float4(0.0); // displacement to be evaluated
	float4 vel = make_float4(0.0); // velocity to be evaluated

	/* shape functions (unused due to unrolled loop below */
	// const float shell_shape[] = { cm*em, cp*em, cm*ep, cp*ep };
	// float cable_shape[] = { zm, zp };

	/* set of nodes (unused due to the rolled loop below */
	const uint4 rn = pdata.fea_ref_nodes;
	// const uint shell_nodes = { rn.x, rn.y, rn.z, rn.w };
	// const uint cable_nodes = { rn.x, rn.y };

	const int el_type_id = pdata.fea_nat_coords.w;

	// the FG_DEFORMABLE particle is assigned to an element and distributes the force that the
	// fluid is exerting on it among all the nodes of the element, in proportions given by the 
	// shaping function.
	// Here we compute the force as SPH acceleraion times particle mass, and then we atomically 
	// add the contribution to the respective nodes

	// divide by 4 for el_type_id == 0, 2 if el_type_id == 1
	const float weight = 1.0f/(4 - 2*el_type_id);

	// both shells and cables have at least two contributing nodes
	const float shape_weight0 = weight*(el_type_id == 0 ? cm*em : zm);
	const float shape_weight1 = weight*(el_type_id == 0 ? cp*em : zp);
	const uint node0 = rn.x;
	const uint node1 = rn.y;

	distribute_fea_movement(params, node0, shape_weight0, dt, disp, vel);
	distribute_fea_movement(params, node1, shape_weight1, dt, disp, vel);

	// shells have another two nodes
	if (el_type_id == 0) {
		const float shape_weight2 = weight*cm*ep;
		const float shape_weight3 = weight*cp*ep;
		const uint node2 = rn.z;
		const uint node3 = rn.w;

		distribute_fea_movement(params, node2, shape_weight2, dt, disp, vel);
		distribute_fea_movement(params, node3, shape_weight3, dt, disp, vel);
	}

	pdata.pos.x += disp.x;
	pdata.pos.y += disp.y;
	pdata.pos.z += disp.z;

	pdata.vel.x = vel.x;
	pdata.vel.y = vel.y;
	pdata.vel.z = vel.z;
}


template<typename EP, typename P>
__device__ __forceinline__
enable_if_t<not (EP::simflags & ENABLE_FEA)>
move_fea_parts(EP const& params, P &pdata, int index, float dt)
{ /* do nothing */ }



